<div class="form_conten">
  <h1>Crear Articulo</h1>
  <%= form_for(@article) do |f| %>
    <% @article.errors.full_messages.each do |message| %>
      <div class="be-red warning">
        * <%= message %>
      </div>
    <% end %>
    <div class="field">
      <%= f.text_field :title, placeholder: "titulo", class: "form-control"%>
    </div>
    <div class="field">
      <%= f.text_area :body, placeholder: "Escribe aqui el articulo", class: "form-control"%>
    </div>
    <div class="field">
      <%= f.submit "Guardar", class: "btn_form_new large-padding"%>
    </div>
  <%end%>
</div>
